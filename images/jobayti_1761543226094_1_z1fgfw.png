<?xml version="1.0" encoding="UTF-8"?>
<svg width="1200" height="630" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <!-- خلفية متدرجة من الأزرق الداكن للفاتح -->
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1e40af;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#3b82f6;stop-opacity:1" />
    </linearGradient>
    
    <!-- تدرج ذهبي للخط والعناصر -->
    <linearGradient id="goldGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#fbbf24;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#fcd34d;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#f59e0b;stop-opacity:1" />
    </linearGradient>
    
    <!-- خلفية شفافة للبوكس -->
    <linearGradient id="boxGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:0.08" />
      <stop offset="100%" style="stop-color:#ffffff;stop-opacity:0.03" />
    </linearGradient>
    
    <!-- فلتر الظل -->
    <filter id="shadow" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur in="SourceAlpha" stdDeviation="3"/>
      <feOffset dx="0" dy="2" result="offsetblur"/>
      <feFlood flood-color="#000000" flood-opacity="0.3"/>
      <feComposite in2="offsetblur" operator="in"/>
      <feMerge>
        <feMergeNode/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- الخلفية الزرقاء المتدرجة -->
  <rect width="1200" height="630" fill="url(#bgGradient)"/>
  
  <!-- دوائر ديكور شفافة في الخلفية -->
  <circle cx="100" cy="100" r="150" fill="#ffffff" opacity="0.03"/>
  <circle cx="1100" cy="150" r="120" fill="#ffffff" opacity="0.04"/>
  <circle cx="150" cy="530" r="180" fill="#ffffff" opacity="0.03"/>
  <circle cx="1050" cy="510" r="140" fill="#ffffff" opacity="0.04"/>
  
  <!-- العنوان الرئيسي: "فرصة عمل جديدة" -->
  <text x="600" y="100" 
        font-family="Tahoma, Arial, sans-serif" 
        font-size="56" 
        font-weight="bold" 
        fill="#ffffff" 
        text-anchor="middle"
        filter="url(#shadow)">فرصة عمل جديدة</text>
  
  <!-- الخط الذهبي تحت العنوان -->
  <rect x="340" y="120" width="520" height="6" rx="3" fill="url(#goldGradient)"/>
  
  <!-- عنوان المشروع في المنتصف -->
  <text x="600" y="307" 
          font-family="Tahoma, Arial, sans-serif" 
          font-size="42" 
          font-weight="normal" 
          fill="#ffffff" 
          text-anchor="middle"
          opacity="0.95">محاسب ومدقق مالي محترف للعمل على تدقيق</text>
  <text x="600" y="357" 
          font-family="Tahoma, Arial, sans-serif" 
          font-size="42" 
          font-weight="normal" 
          fill="#ffffff" 
          text-anchor="middle"
          opacity="0.95">حسابات شركتنا</text>
  
  <!-- بوكس المنصة في الأسفل -->
  <g transform="translate(420, 430)">
    <!-- خلفية البوكس -->
    <rect x="0" y="0" width="360" height="100" rx="20" 
          fill="url(#boxGradient)" 
          stroke="rgba(255,255,255,0.15)" 
          stroke-width="2"/>
    
    <!-- أيقونة اللابتوب الذهبية -->
    <g transform="translate(30, 30)">
      <rect x="0" y="5" width="40" height="28" rx="2" 
            fill="none" 
            stroke="url(#goldGradient)" 
            stroke-width="3"/>
      <rect x="-3" y="33" width="46" height="3" rx="1.5" 
            fill="url(#goldGradient)"/>
      <text x="20" y="24" 
            font-family="Tahoma, Arial, sans-serif" 
            font-size="16" 
            font-weight="bold" 
            fill="url(#goldGradient)" 
            text-anchor="middle">م</text>
    </g>
    
    <!-- نص "المنصة" -->
    <text x="180" y="35" 
          font-family="Tahoma, Arial, sans-serif" 
          font-size="18" 
          fill="rgba(255,255,255,0.7)" 
          text-anchor="middle">المنصة</text>
    
    <!-- نص "منصة مستقل" -->
    <text x="180" y="65" 
          font-family="Tahoma, Arial, sans-serif" 
          font-size="24" 
          font-weight="bold" 
          fill="#ffffff" 
          text-anchor="middle">منصة مستقل</text>
  </g>
  
  <!-- jobayti.live في الأسفل اليسار مع أيقونة الرابط -->
  <g transform="translate(60, 550)">
    <!-- أيقونة الرابط -->
    <circle cx="15" cy="15" r="20" fill="#3b82f6" opacity="0.8"/>
    <g transform="translate(7, 7)">
      <path d="M 4 9 L 9 4 L 11 6 L 6 11 Z" 
            fill="none" 
            stroke="#fbbf24" 
            stroke-width="2.5" 
            stroke-linecap="round"/>
      <path d="M 7 12 L 12 7 L 14 9 L 9 14 Z" 
            fill="none" 
            stroke="#fbbf24" 
            stroke-width="2.5" 
            stroke-linecap="round"/>
    </g>
    
    <!-- النص -->
    <text x="45" y="23" 
          font-family="Tahoma, Arial, sans-serif" 
          font-size="22" 
          font-weight="bold" 
          fill="#ffffff">jobayti.live</text>
  </g>
  
  <!-- Jobayti في الأسفل اليمين -->
  <g transform="translate(1020, 550)">
    <rect x="0" y="0" width="160" height="60" rx="15" 
          fill="rgba(255,255,255,0.1)" 
          stroke="rgba(255,255,255,0.2)" 
          stroke-width="2"/>
    <text x="80" y="40" 
          font-family="Tahoma, Arial, sans-serif" 
          font-size="28" 
          font-weight="bold" 
          fill="#ffffff" 
          text-anchor="middle">Jobayti</text>
  </g>
  
  <!-- خط ديكور ذهبي رأسي في اليمين -->
  <rect x="1180" y="200" width="6" height="180" rx="3" fill="url(#goldGradient)" opacity="0.6"/>
</svg>